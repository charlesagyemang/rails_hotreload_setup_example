<h1>Post Page Here Cool</h1>

<% @posts.each do |post| %>
  <h3><%= post.title %></h3>
  <h4><%= post.body %></h4>
  <%= link_to "Show",    post %>
  <%= link_to "Edit",    edit_post_path(post) %>
  <%= link_to "Destroy",
      delete_post_path(post),
      method: :delete,
      data: {
        confirm: "Are You Sure You Want To Delete this?"
      }
  %>
<% end %>
<br><br>
<%= link_to "New Post", posts_new_path %>
